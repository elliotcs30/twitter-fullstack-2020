{{>left}}
{{!-- 中間欄: 上線使用者 --}}
<div class="col-4  col-md-3 no-gutters center-column">
  <div class="title-wrapper px-3 d-flex align-items-center">
    <h1 class="title">上線使用者(<span id="connected-users-count">5</span>)</h1>
  </div>
  <div class="user-panel px-3">

    {{!-- 1個上線使用者 --}}
    <div class="pr-1 py-2 d-flex align-items-center connected-user">

    </div>

  </div>
</div>

{{!-- 右欄: message board --}}
<div class="col-5 col-md-7 right-column no-gutters">
  <div class="public-chat-room my-3">
    <div class="title-wrapper px-3 d-flex align-items-center">
      <h1 class="title">公開聊天室</h1>
    </div>
    <form action="" class=" message-form">
      <div class="message-board">

        {{!-- 使用者上下線訊息 --}}
        <div class="user-status-wrapper d-flex justify-content-center py-2">
          <div class="user-status badge badge-pill bg-gray font-weight-bold text-gray">Kelly 上線</div>
        </div>
        {{!-- 他人發的訊息 --}}
        <div class="message-wrapper d-flex align-items-end px-3 py-2">

        </div>

        {{!-- 自己發的訊息 --}}
        <div class="row">
          <ul class="list-group board">
            {{!-- render by js --}}
          </ul>
        </div>

      </div>
      {{!-- 訊息輸入表單 --}}
      <input type="text" name="message" class="message-input flex-grow-1 border-0 rounded-pill bg-gray form-control"
        placeholder="輸入訊息...">
      <button class="btn btn-primary" type="submit">submit</button>
    </form>
  </div>
</div>